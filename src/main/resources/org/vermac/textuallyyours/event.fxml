<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.vermac.textuallyyours.EventController"
      spacing="20" fx:id="root">
    <padding>
        <Insets right="10" left="10" bottom="15" top="15"/>
    </padding>

    <VBox alignment="CENTER" spacing="25">
        <padding>
            <Insets right="10" left="10"/>
        </padding>

        <!-- Name of Event -->
        <HBox spacing="20" alignment="CENTER_LEFT">
            <Label text="Name of Event" style="
                -fx-font-size: 14px;
                -fx-text-fill: #000000;
                -fx-font-family: Monaco, 'Courier New', monospace;"
                   prefWidth="175"/>

            <TextField fx:id="eventName" promptText="name" style="
                -fx-prompt-text-fill: #696969;
                -fx-background-color: transparent;
                -fx-border-radius: 10px;
                -fx-border-width: 2px;
                -fx-border-color: #000000;
                -fx-font-size: 14px;
                -fx-text-fill: #000000;
                -fx-font-family: Monaco, 'Courier New', monospace;"
                       prefWidth="250"/>
        </HBox>

        <!-- Event Description -->
        <HBox spacing="20">
            <Label text="Description" style="
                -fx-font-size: 14px;
                -fx-text-fill: #000000;
                -fx-font-family: Monaco, 'Courier New', monospace;"
                   prefWidth="175"/>
            <TextArea fx:id="description" style="
                -fx-font-size: 14px;
                -fx-border-radius: 5px;
                -fx-text-fill: #000000;
                -fx-font-family: Monaco, 'Courier New', monospace;"
                      prefWidth="250" prefHeight="80" wrapText="true"/>
        </HBox>

        <!-- Date -->
        <HBox spacing="20">
            <Label text="Date" style="
                -fx-font-size: 14px;
                -fx-text-fill: #000000;
                -fx-font-family: Monaco, 'Courier New', monospace;"
                   prefWidth="175"/>
            <DatePicker fx:id="date" style="
                -fx-font-size: 14px; -fx-text-fill: #000000;
                -fx-font-family: Monaco, 'Courier New', monospace;"/>
        </HBox>

        <!-- Time -->
        <HBox spacing="20" alignment="CENTER_LEFT">
            <Label text="Time (eg: 6:00 pm)" style="
                -fx-font-size: 14px;
                -fx-text-fill: #000000;
                -fx-font-family: Monaco, 'Courier New', monospace;"
                   prefWidth="175"/>
            <TextField fx:id="time" promptText="time" style="
                -fx-prompt-text-fill: #696969;
                -fx-background-color: transparent;
                -fx-border-radius: 10px;
                -fx-border-width: 2px;
                -fx-border-color: #000000;
                -fx-font-size: 14px;
                -fx-text-fill: #000000;
                -fx-font-family: Monaco, 'Courier New', monospace;"
                       prefWidth="250"/>
        </HBox>

        <Region VBox.vgrow="ALWAYS"/>
        <Button alignment="BASELINE_CENTER" text="Let's Do This!"
                onAction="#sendInvite" style="
            -fx-font-size: 14px;
            -fx-text-fill: #000000;
            -fx-font-family: Monaco, 'Courier New', monospace;"/>
    </VBox>
</VBox>
